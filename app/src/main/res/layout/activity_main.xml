<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText android:id="@+id/main_edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Enter the your name "
        android:padding="20dp"
        android:layout_marginTop="100dp"

        />

    <EditText android:id="@+id/main_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Enter the Email id "
        android:padding="20dp"
        android:layout_marginTop="5dp"
        />

    <Button android:id="@+id/main_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Send the to the server"
        android:layout_marginTop="40dp"
        android:background="#D5B3DB"
        android:layout_gravity="center_horizontal"
        />
    
    <TextView android:id="@+id/main_text_view_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#D91A0C"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#D91A0C"
        android:textAlignment="center"
        android:text="Powered by \n Skyline ITC Services"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>